{
  "name": "Ultimate Dev Environment - Ubuntu 24.04",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash"
  },
  "remoteUser": "root",
  "postCreateCommand": "echo âœ… Ubuntu Dev Env Ready!",
  "features": {},
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-vscode.cpptools",
        "esbenp.prettier-vscode"
      ]
    }
  },
  "mounts": [
    "source=${localWorkspaceFolder}/.config,target=/root/.config,type=bind",
    "source=${localWorkspaceFolder}/.zshrc,target=/root/.zshrc,type=bind"
  ]
}
